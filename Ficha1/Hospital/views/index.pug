extends layout

block content
  h1= title
  p Aplicação do Hospital

  form.w3-container.w3-card-4.w3-light-grey.w3-text-blue.w3-margin(action='/action_page.php')
    h2.w3-center Efetuar Pedido
    .w3-row.w3-section
      .w3-col(style='width:50px')
        i.w3-xxlarge.fa.fa-user
      .w3-rest
        input.w3-input.w3-border(name='first' type='text' placeholder='First Name')
    .w3-row.w3-section
      .w3-col(style='width:50px')
        i.w3-xxlarge.fa.fa-user
      .w3-rest
        input.w3-input.w3-border(name='last' type='text' placeholder='Last Name')
    .w3-row.w3-section
      .w3-col(style='width:50px')
        i.w3-xxlarge.fa.fa-envelope-o
      .w3-rest
        input.w3-input.w3-border(name='email' type='text' placeholder='Email')
    .w3-row.w3-section
      .w3-col(style='width:50px')
        i.w3-xxlarge.fa.fa-phone
      .w3-rest
        input.w3-input.w3-border(name='phone' type='text' placeholder='Phone')
    .w3-row.w3-section
      .w3-col(style='width:50px')
        i.w3-xxlarge.fa.fa-user
      .w3-rest
        input.w3-input.w3-border(name='first' type='text' placeholder='Numero da Consulta')
    .w3-row.w3-section
      .w3-col(style='width:50px')
        i.w3-xxlarge.fa.fa-pencil
      .w3-rest
        input.w3-input.w3-border(name='message' type='text' placeholder='Message')
    button.w3-button.w3-block.w3-section.w3-blue.w3-ripple.w3-padding Send

