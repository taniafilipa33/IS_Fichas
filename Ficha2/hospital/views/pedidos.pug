extends layout

block content    
    .w3-card-4.w3-margin-us.w3-white.w3-center
      .w3-container

       .container
         .row          
           .col-md-12
            .main_text          
               a(href='/inserirPedido')
                | Inserir Novo Pedido +

       br
       table.w3-table.w3-striped.w3-center
         tr
           th Mensagem
           th Estado
           th Data
           th Relatório
           th Tipo Exame 
           th Descrição de Exame 
         each elemento in pedidos
           tr
             td=elemento.mensagem
             td=elemento.estado
             td=elemento.data
             td=elemento.relatório 
             td=elemento.codigoExame 
             td=elemento.descExame
             hr
      a.w3-button.w3-red.w3-padding(href='/') Voltar
      br
