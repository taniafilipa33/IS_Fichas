extends layout

block content    
    .w3-card-4.w3-margin-us.w3-white.w3-center
      .w3-container

       .container
         .row          
           .col-md-12
            .main_text  
               br        
               a.w3-button.w3-teal.w3-padding(href='/inserirPedido')
                | Inserir Novo Pedido +

       table.w3-table.w3-striped.w3-center
         tr
           th Estado
           th Data
           th Tipo Exame 
           th Descrição de Exame 
           th Relatório
         each elemento in pedidos
